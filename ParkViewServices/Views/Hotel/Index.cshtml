<style>
    
    /*videoContainer*/

    
    .masthead-wrapper {
        position: relative;
        overflow: hidden;
        min-height: 38.8125rem;
    }

    .masthead-video {
        overflow: hidden;
        display: flex;
        justify-content: center;
        position: relative;
    }

    .video-wrapper {
        padding: 0;
        line-height: 0;
        height: 38.8125rem;
    }

    .masthead-video video {
        width: 100vw;
        height: 100%;
        object-fit: cover;
    }

    .masthead-content.container {
    padding-bottom: 65px;
    padding-left:80px;
}
.masthead-content {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 50%;
    transform: translate(-50%);
    color: #fff;
    display: flex;
    flex-direction: column;
    z-index: 3;
    animation: masthead-opacity-fadeIn-animation 2s;
    justify-content: flex-end;
}
@@media only screen and (min-width: 576px)
.container {
    padding-left: 16px;
    padding-right: 16px;
}
.container {
    
