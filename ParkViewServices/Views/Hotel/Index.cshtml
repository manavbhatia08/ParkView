        font-size: 1rem;
        line-height: 1.5;
        letter-spacing: -.36px;
        font-family: AkkuratLLWebPan-Regular,Arial,sans-serif;
    }


    .sec {
        width: 80%;
        margin: 0 auto;
        line-height: 0;
        position: relative;
        overflow:hidden;
        height:100%;
        background-color: rgba(0,0,0,0);
    }

     .sec img {
            width: 100%;
        }

        .sec article {
            position: absolute;
            top: 0;
            width: 100%;
            background: white;
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            grid-gap: 20px;
            mix-blend-mode: lighten;
        }

        .sec .division {
            background: black;
            
        }

            .sec .division:nth-of-type(2) {
                grid-column: 0.5;
            }

